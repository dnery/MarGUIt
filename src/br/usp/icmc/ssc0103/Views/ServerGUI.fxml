<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane alignment="CENTER" hgap="10" prefHeight="480" prefWidth="640"
          vgap="10" xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/8"
          fx:controller="br.usp.icmc.ssc0103.Controls.ServerGUIController">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <VBox alignment="BASELINE_CENTER" spacing="10.0"
          GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Label style="-fx-font: BOLD 20 Tahoma;"
               text="Server Management Interface"/>
        <Button fx:id="debugButton" onAction="#showMessage"
                text="Show Message"/>
        <Button fx:id="quitButton" onAction="#quitProgram"
                text="Quit Program"/>
        <Text fx:id="outputText"/>
    </VBox>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
