<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane xmlns:fx="http://java.sun.com/JSP/Page" xmlns="http://javafx.com/fxml"
          alignment="CENTER"
          prefHeight="240" prefWidth="320" hgap="5" vgap="5" styleClass="root"
          fx:controller="br.usp.icmc.ssc0103.control.ClientDB1Controller">

    <padding>
        <Insets bottom="5" left="5" right="5" top="5"/>
    </padding>

    <HBox alignment="BASELINE_LEFT" spacing="5"
          GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Label text="Register New Customer"/>
    </HBox>

    <Region GridPane.vgrow="ALWAYS" GridPane.columnIndex="0"
            GridPane.rowIndex="1"/>

    <TextField fx:id="nameField" alignment="BASELINE_CENTER"
               promptText="customer name" GridPane.hgrow="ALWAYS"
               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="addressField" alignment="BASELINE_CENTER"
               promptText="customer address" GridPane.hgrow="ALWAYS"
               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="phoneNumberField" alignment="BASELINE_CENTER"
               promptText="customer phone number" GridPane.hgrow="ALWAYS"
               GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="userEmailField" alignment="BASELINE_CENTER"
               promptText="customer e-mail" GridPane.hgrow="ALWAYS"
               GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="userNameField" alignment="BASELINE_CENTER"
               promptText="unique username" GridPane.hgrow="ALWAYS"
               GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <PasswordField fx:id="passWordField" alignment="BASELINE_CENTER"
                   promptText="password" GridPane.hgrow="ALWAYS"
                   GridPane.columnIndex="0" GridPane.rowIndex="7"/>

    <Region GridPane.vgrow="ALWAYS" GridPane.columnIndex="0"
            GridPane.rowIndex="8"/>

    <HBox alignment="BASELINE_CENTER" spacing="5"
          GridPane.columnIndex="0" GridPane.rowIndex="9">
        <Text fx:id="oneLiner"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button onAction="#registerCustomer" text="Done"/>
    </HBox>

    <stylesheets>
        <URL value="@resources/whitebastards.css"/>
    </stylesheets>

</GridPane>
